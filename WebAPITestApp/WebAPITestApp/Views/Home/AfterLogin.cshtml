@{
    ViewBag.Title = "AfterLogin";
}
<html>
<head>
    <h2>After Login</h2>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <label>Welcome, user @User.Identity.Name</label>
            <form method="post" asp-controller="Home" asp-action="LogOff">
                <input type="submit" value="Exit" />
            </form>
    }
    else
    {
        @Html.ActionLink("Login", "Index", "Home")
        @Html.ActionLink("Register", "Register", "Account")
    }
</body>
</html>